<ResourceDictionary
    x:Class="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlatesolveplusDockableTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables">

    <!--
      WICHTIG: Der Key muss exakt dem Typ entsprechen, der als Text im Dockable angezeigt wird + "_Dockable".
      Da du aktuell den Typnamen siehst, aber noch nicht sicher ist ob es Dockable oder DockableVM ist,
      registrieren wir einfach BEIDE Keys auf dieselbe View. Das ist der schnellste "ich will's JETZT sehen"-Fix.
    -->

    <!-- Falls DataContext = ...PlateSolvePlusDockable -->
    <DataTemplate x:Key="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlateSolvePlusDockable_Dockable">
        <local:PlateSolvePlusDockableView />
    </DataTemplate>

    <!-- Falls DataContext = ...PlateSolvePlusDockableVM -->
    <DataTemplate x:Key="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlateSolvePlusDockableVM_Dockable">
        <local:PlateSolvePlusDockableView />
    </DataTemplate>

    <!-- Icon (optional) -->
    <GeometryGroup x:Key="PlateSolvePlus_PlateSolveSVG">
        <PathGeometry Figures="M 0,0 L 16,0 16,16 0,16 Z" />
    </GeometryGroup>

</ResourceDictionary>

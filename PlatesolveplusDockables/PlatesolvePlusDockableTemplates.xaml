<ResourceDictionary
    x:Class="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlatesolveplusDockableTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dockable Template: Key = Vollqualifizierter Dockable-Klassenname + _Dockable -->
    <DataTemplate x:Key="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlateSolvePlusDockable_Dockable">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding StatusText}"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="Connect"
                        Command="{Binding ConnectSecondaryCommand}"
                        Margin="0,0,6,0" />
                <Button Content="Disconnect"
                        Command="{Binding DisconnectSecondaryCommand}"
                        Margin="0,0,6,0" />
                <Button Content="Capture + Solve"
                        Command="{Binding CaptureAndSolveCommand}" />
            </StackPanel>

            <TextBox Grid.Row="2"
                     Text="{Binding DetailsText}"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"/>
        </Grid>
    </DataTemplate>

    <!-- Icon (optional) -->
    <GeometryGroup x:Key="PlateSolvePlus_PlateSolveSVG">
        <PathGeometry Figures="M 0,0 L 16,0 16,16 0,16 Z" />
    </GeometryGroup>

</ResourceDictionary>

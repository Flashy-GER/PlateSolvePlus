<UserControl x:Class="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlateSolvePlusDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- =========================
                 SECTION 1: Existing UI
                 ========================= -->
            <Border Grid.Row="0"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="4"
                    Margin="0,0,0,10">

                <StackPanel>
                    <TextBlock Text="PlateSolvePlus"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock ><Run Text="Secondary "/><Run Text="Camera"/><Run Language="de-de" Text=" "/><Run Text="Connected: "/></TextBlock>
                        <TextBlock Text="{Binding IsSecondaryConnected}" FontWeight="SemiBold" />
                    </StackPanel>

                    <WrapPanel Margin="0,0,0,8">
                        <Button Content="Connect"
                                Width="90"
                                Margin="0,0,8,0"
                                Command="{Binding ConnectSecondaryCommand}" />
                        <Button Content="Disconnect"
                                Width="90"
                                Margin="0,0,8,0"
                                Command="{Binding DisconnectSecondaryCommand}" />
                        <Button Content="Capture + FITS"
                                Width="120"
                                Margin="0,0,8,0"
                                Command="{Binding CaptureAndSaveFitsCommand}" />
                        <Button Content="Capture + Solve"
                                Width="120"
                                Command="{Binding CaptureAndSolveCommand}" />
                    </WrapPanel>

                    <TextBlock Text="{Binding StatusText}"
                               FontWeight="SemiBold"
                               Margin="0,4,0,6"/>

                    <TextBlock Text="Last FITS:" Margin="0,4,0,2" />
                    <TextBox Text="{Binding LastFitsPath}"
                             Height="26"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             VerticalContentAlignment="Center"/>

                    <TextBox Text="{Binding DetailsText}"
                             Margin="0,8,0,0"
                             Height="190"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- =========================
                 SECTION 2: Offset UI
                 ========================= -->
            <Border Grid.Row="1"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="4">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"><Run Language="de-de" Text="                      "/><Run Text="Second Scope PlateSolve Offset"/></TextBlock>

                    <!-- Controls -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <CheckBox Content="Offset enabled"
                                  IsChecked="{Binding Settings.OffsetEnabled}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>

                        <Button Content="Calibrate Offset (Main = Telescope, Guide = last solve)"
                                Command="{Binding CalibrateOffsetCommand}"
                                Margin="0,0,12,0"/>

                        <Button Content="Reset Offset"
                                Command="{Binding ResetOffsetCommand}"/>
                    </StackPanel>

                    <!-- Status -->
                    <Border Grid.Row="2"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="4"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="{Binding StatusLine}" Margin="0,0,0,6"/>

                            <UniformGrid Columns="2" Rows="3">
                                <TextBlock Text="Offset RA (arcsec):"/>
                                <TextBlock Text="{Binding Settings.OffsetRaArcsec, StringFormat={}{0:0.###}}"/>

                                <TextBlock Text="Offset Dec (arcsec):"/>
                                <TextBlock Text="{Binding Settings.OffsetDecArcsec, StringFormat={}{0:0.###}}"/>

                                <TextBlock Text="Last calibration (UTC):"/>
                                <TextBlock Text="{Binding LastCalibrationText}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Solve output -->
                    <Border Grid.Row="3"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Last guider solve:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding LastGuiderSolveText}" Margin="0,0,0,10"/>

                            <TextBlock Text="Corrected coordinates (after offset):" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding CorrectedSolveText}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Optional spacer -->
            <Border Grid.Row="2" Height="8" Opacity="0"/>
        </Grid>
    </ScrollViewer>
</UserControl>

<UserControl x:Class="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlateSolvePlusDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="8">
        <StackPanel>
            <TextBlock Text="PlateSolvePlus" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Secondary Connected: " />
                <TextBlock Text="{Binding IsSecondaryConnected}" FontWeight="SemiBold" />
            </StackPanel>

            <WrapPanel Margin="0,0,0,8">
                <Button Content="Connect" Width="90" Margin="0,0,8,0" Command="{Binding ConnectSecondaryCommand}" />
                <Button Content="Disconnect" Width="90" Margin="0,0,8,0" Command="{Binding DisconnectSecondaryCommand}" />
                <Button Content="Capture + FITS" Width="120" Margin="0,0,8,0" Command="{Binding CaptureAndSaveFitsCommand}" />
                <Button Content="Capture + Solve" Width="120" Command="{Binding CaptureAndSolveCommand}" />
            </WrapPanel>

            <TextBlock Text="{Binding StatusText}" FontWeight="SemiBold" Margin="0,4,0,6"/>

            <TextBlock Text="Last FITS:" Margin="0,4,0,2" />
            <TextBox Text="{Binding LastFitsPath}"
                     Height="26"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     VerticalContentAlignment="Center"/>

            <TextBox Text="{Binding DetailsText}"
                     Margin="0,8,0,0"
                     Height="190"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="NINA.Plugins.PlateSolvePlus.PlatesolveplusDockables.PlateSolvePlusDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="520">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="4"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- Header -->
                        <RowDefinition Height="Auto"/>  <!-- Main reference -->
                        <RowDefinition Height="Auto"/>  <!-- Telescope coords -->
                        <RowDefinition Height="Auto"/>  <!-- Offset controls -->
                        <RowDefinition Height="Auto"/>  <!-- Status -->
                        <RowDefinition Height="Auto"/>  <!-- Solve output -->
                        <RowDefinition Height="Auto"/>  <!-- Tip -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"
                               Text="Second Scope PlateSolve Offset"/>

                    <!-- Main reference selection -->
                    <Border Grid.Row="1"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="4"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Main reference" FontWeight="SemiBold" Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <RadioButton Content="Use telescope coords (live)"
                                             IsChecked="{Binding UseTelescopeCoordsAsMainRef}"
                                             Margin="0,0,14,0"/>
                                <RadioButton Content="Use main-scope solve+sync (refresh)"
                                             IsChecked="{Binding UseMainScopeSolveAsMainRef}"/>
                            </StackPanel>

                            <TextBlock Text="{Binding MainReferenceHintText}"
                                       Opacity="0.85"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding MainReferenceReadyText}" Margin="0,0,10,0"/>
                                <Button Content="Refresh"
                                        Command="{Binding RefreshTelescopeCoordsCommand}"
                                        Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding TelescopeCoordsText}" Opacity="0.9" TextWrapping="Wrap"/>
                            </StackPanel>

                            <TextBlock Text="{Binding MainReferenceStatusText}"
                                       Opacity="0.8"
                                       TextWrapping="Wrap"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Offset controls -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                Margin="0,0,0,10"
                                VerticalAlignment="Center">
                        <CheckBox Content="Offset enabled"
                                  IsChecked="{Binding Settings.OffsetEnabled}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"/>

                        <TextBlock Text="Mode: Rotation (fixed)"
                                   VerticalAlignment="Center"
                                   Opacity="0.85"
                                   Margin="0,0,16,0"/>

                        <Button Content="Reset Offset"
                                Command="{Binding ResetOffsetCommand}"/>
                    </StackPanel>

                    <!-- Status -->
                    <Border Grid.Row="4"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="4"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="{Binding StatusLine}" Margin="0,0,0,6" TextWrapping="Wrap"/>

                            <UniformGrid Columns="2" Rows="3">
                                <TextBlock Text="Rotation angle (deg):"/>
                                <TextBlock Text="{Binding RotationAngleDegText}"/>

                                <TextBlock Text="Rotation quaternion (w,x,y,z):"/>
                                <TextBlock Text="{Binding RotationQuaternionText}" TextWrapping="Wrap"/>

                                <TextBlock Text="Last calibration (UTC):"/>
                                <TextBlock Text="{Binding LastCalibrationText}"/>
                            </UniformGrid>
                        </StackPanel>
                    </Border>

                    <!-- Solve output -->
                    <Border Grid.Row="5"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Last guider solve:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding LastGuiderSolveText}" Margin="0,0,0,10" TextWrapping="Wrap"/>

                            <TextBlock Text="Corrected coordinates (after offset):" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding CorrectedSolveText}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Tip -->
                    <TextBlock Grid.Row="6"
                               Margin="0,10,0,0"
                               Opacity="0.8"
                               TextWrapping="Wrap"
                               Text="Tip: In main-scope mode, run a MAIN plate solve WITH Sync, then click Refresh (or slew) to capture the main reference."/>
                </Grid>
            </Border>

            <!-- Optional spacer -->
            <Border Grid.Row="1" Height="8" Opacity="0"/>
        </Grid>
    </ScrollViewer>
</UserControl>

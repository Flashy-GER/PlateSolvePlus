<UserControl x:Class="NINA.Plugins.PlateSolvePlus.PlateSolvePlusDockable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="PlateSolvePlus Second Scope PlateSolve Offset"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox Content="Offset enabled"
                      IsChecked="{Binding Settings.OffsetEnabled}"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"/>

            <Button Content="Calibrate Offset (Main = Telescope, Guide = last solve)"
                    Command="{Binding CalibrateOffsetCommand}"
                    Margin="0,0,12,0"/>

            <Button Content="Reset Offset"
                    Command="{Binding ResetOffsetCommand}"/>
        </StackPanel>

        <!-- Status -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="{Binding StatusLine}" Margin="0,0,0,6"/>

                <UniformGrid Columns="2" Rows="3">
                    <TextBlock Text="Offset RA (arcsec):"/>
                    <TextBlock Text="{Binding Settings.OffsetRaArcsec, StringFormat={}{0:0.###}}"/>

                    <TextBlock Text="Offset Dec (arcsec):"/>
                    <TextBlock Text="{Binding Settings.OffsetDecArcsec, StringFormat={}{0:0.###}}"/>

                    <TextBlock Text="Last calibration (UTC):"/>
                    <TextBlock Text="{Binding LastCalibrationText}"/>
                </UniformGrid>
            </StackPanel>
        </Border>

        <!-- Solve output -->
        <Border Grid.Row="3" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1" Padding="10" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Last guider solve:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <TextBlock Text="{Binding LastGuiderSolveText}" Margin="0,0,0,10"/>

                <TextBlock Text="Corrected coordinates (after offset):" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <TextBlock Text="{Binding CorrectedSolveText}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
